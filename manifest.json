{
    "manifest_version": 2,
    "name": "My First Extension",
    "version": "1.0",
    "description": "A simple Chrome extension",
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "permissions": [
      "activeTab"
    ],
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content.js"]
      }
    ]
  }
  